<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div class="container">
          <%= link_to root_path, class:"logo-box" do %>
            <p class="navbar-brand">Logo</p>
          <% end %>
          <% if costomer_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <%= link_to "マイページ", my_page_path, class:"nav-items" %>
                <%= link_to "商品一覧", items_path, class:"nav-items" %>
                <%= link_to "カート", cart_items_path, class:"nav-items" %>
                <%= link_to "ログアウト", destroy_costomer_session_path, method: :delete, class:"nav-items" %>
              </ul>
            </div>
          <% else %>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li><%= link_to "About", about_path, class:"nav-items" %></li>
                <li><%= link_to "商品一覧", items_path, class:"nav-items" %></li>
                <li><%= link_to "新規登録", new_costomer_registration_path, class:"nav-items" %></li>
                <li><%= link_to "ログイン", new_costomer_session_path, class:"nav-items" %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
