<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <td>名前</td>
      <td>
        <%= f.label :last_name, "（姓）"%>
      </td>
      <td>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </td>
      <td>
        <%= f.label :first_name, "（名）"%>
      </td>
      <td>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.label :last_name_kana, "（セイ）" %>
      </td>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </td>
      <td>
        <%= f.label :first_name_kana, "（メイ）" %>
      </td>
      <td>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td></td>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
      <td></td>
      <td>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td></td>
      <td colspan="3">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></td>
      <td></td>
      <td>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
        <% end %>
      </td>
      <td></td>
      <td>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
      <td></td>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </td>
      <td></td>
    </tr>
  </table>

<% end %>

<%= render "customer/shared/links" %>
