<h1>ジャンル一覧・追加</h1>

<div class="new_create_genre">
  <%= form_with model: @new_genre, url: admin_genres_path, method: :post, local:true do |f| %>
    <p>ジャンル名        <%= f.text_field :name %>        <%= f.submit "新規登録" %></p>
  <% end %>
</div>

<div class="genre_lists">
  <table>
    <tr>
      <th width="200px">ジャンル</th>
      <th width="100px"></th>
    </tr>
    <% @genres.each do |f| %>
      <tr>
        <td>
          <%= f.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(f) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>