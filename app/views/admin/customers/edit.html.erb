<h1><%= @user.last_name %><%= @user.first_name %>の会員情報編集</h1>

<%= form_with model:@user, url: admin_customer_path, method: :patch, local:true do |f| %>
  <table>
    <tr>
      <td width="150px">会員ID</td>
      <td width="150px"><%= @user.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %>  <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_deleted, :active, checked: !(@user.discarded?) %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :deleted, checked: (@user.discarded?) %>
        <%= f.label :is_deleted, "無効" %>
      </td>
    </tr>
    <tr></tr>
    <tr>
      <td></td>
      <td><%= f.submit "変更を保存" %></td>
    </tr>
  </table>
<% end %>