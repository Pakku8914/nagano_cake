<h1>配送先編集</h1>

<table>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch, local:true do |f| %>
    <tr>
      <td>
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      </td>
      <td>
        <%= f.text_field :postal_code %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所"%>
      </td>
      <td>
        <%= f.text_field :address %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :name, "宛名" %>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <%= f.submit "変更内容を保存" %>
  <% end %>
</table>