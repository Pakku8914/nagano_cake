<h1>会員情報編集</h1>

<%= form_with model: @customer, url: my_page_update_path, local: true do |f| %>
  <table>
      <tr>
        <td width="150px">氏名</td>
        <td width="150px">姓<%= f.text_field :last_name %></td>
        <td width="150px">名<%= f.text_field :first_name %></td>
        <td width="150px"></td>
      </tr>
      <tr>
        <td width="150px">フリガナ</td>
        <td width="150px">セイ<%= f.text_field :last_name_kana %></td>
        <td width="150px">メイ<%= f.text_field :first_name_kana %></td>
        <td width="150px"></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td></td>
        <td width="170px"><%= f.submit '編集内容を保存' %></td>
        <td></td>
        <td width="100px"><%= link_to "退会する", my_page_exit_path %></td>
      </tr>
  </table>
<% end %>
